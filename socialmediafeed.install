/**
 * Implements hook_install().
 */
function socialmediafeed_install() {
  drupal_install_schema('socialmediafeed');
}


/**
 * Implements hook_uninstall().
 */
function socialmediafeed_uninstall() {
  variable_del('socialmediafeed_facebook_profile_id');
  variable_del('socialmediafeed_facebook_app_id');
  variable_del('socialmediafeed_facebook_app_secret');
  variable_del('socialmediafeed_twitter_profile_id');
  variable_del('socialmediafeed_youtube_profile_name');
  variable_del('socialmediafeed_foursquare_access_token');
  variable_del('socialmediafeed_title');
  variable_del('socialmediafeed_displaycount');
  variable_del('socialmediafeed_facebook_title_checkbox');
  variable_del('socialmediafeed_facebook_title');
  variable_del('socialmediafeed_twitter_title_checkbox');
  variable_del('socialmediafeed_twitter_title');
  variable_del('socialmediafeed_youtube_title_checkbox');
  variable_del('socialmediafeed_youtube_title');
  variable_del('socialmediafeed_foursquare_title_checkbox');
  variable_del('socialmediafeed_foursquare_title');

  drupal_uninstall_schema('socialmediafeed');
}
