/**
 * Implements form_submit().
 */
function socialmediafeed_settings_form_submit(&$form, &$form_state) {

  $socialmediafeed_vars = array(
    'socialmediafeed_facebook_profile_id' => $form_state['values']['socialmediafeed_facebook_profile_id'],
    'socialmediafeed_facebook_app_id' => $form_state['values']['socialmediafeed_facebook_app_id'],
    'socialmediafeed_facebook_app_secret' => $form_state['values']['socialmediafeed_facebook_app_secret'],
    'socialmediafeed_twitter_profile_id' => $form_state['values']['socialmediafeed_twitter_profile_id'],
    'socialmediafeed_youtube_profile_name' => $form_state['values']['socialmediafeed_youtube_profile_name'],
    'socialmediafeed_foursquare_access_token' => $form_state['values']['socialmediafeed_foursquare_access_token'],
    'socialmediafeed_title' => $form_state['values']['socialmediafeed_title'],
    'socialmediafeed_displaycount' => $form_state['values']['socialmediafeed_displaycount'],
    'socialmediafeed_facebook_title_checkbox' => $form_state['values']['socialmediafeed_facebook_title_checkbox'],
    'socialmediafeed_facebook_title' => $form_state['values']['socialmediafeed_facebook_title'],
    'socialmediafeed_twitter_title_checkbox' => $form_state['values']['socialmediafeed_twitter_title_checkbox'],
    'socialmediafeed_twitter_title' => $form_state['values']['socialmediafeed_twitter_title'],
    'socialmediafeed_youtube_title_checkbox' => $form_state['values']['socialmediafeed_youtube_title_checkbox'],
    'socialmediafeed_youtube_title' => $form_state['values']['socialmediafeed_youtube_title'],
    'socialmediafeed_foursquare_title_checkbox' => $form_state['values']['socialmediafeed_foursquare_title_checkbox'],
    'socialmediafeed_foursquare_title' => $form_state['values']['socialmediafeed_foursquare_title'],
  );

  foreach ($socialmediafeed_vars as $key => $value) {
    variable_set($key, $value);
  }

  // Flush the table when these feeds are changed to keep data clean.
  socialmediafeed_flush();

  // Retrieve data.
  if ($form_state['values']['socialmediafeed_facebook_profile_id'] && $form_state['values']['socialmediafeed_facebook_app_id'] && $form_state['values']['socialmediafeed_facebook_app_secret']) {
    socialmediafeed_facebook();
    drupal_set_message(t("Facebook data has been updated as needed."));
  }
  if ($form_state['values']['socialmediafeed_twitter_profile_id']) {
    socialmediafeed_twitter();
    drupal_set_message(t("Twitter data has been updated as needed."));
  }
  if ($form_state['values']['socialmediafeed_youtube_profile_name']) {
    socialmediafeed_youtube();
    drupal_set_message(t("Youtube data has been updated as needed."));
  }
  if ($form_state['values']['socialmediafeed_foursquare_access_token']) {
    socialmediafeed_foursquare();
    drupal_set_message(t("Foursquare data has been updated as needed."));
  }
  drupal_set_message(t("Your feed settings have been saved. Data has been change accordingly."));
}

/**
 * Flushes the cached data.
 */
function socialmediafeed_flush() {
  // Flush the all feed data.
  $query = "TRUNCATE TABLE {socialmediafeed_post}";
  $sql = db_query($query);
}

/**
 * Implements hook_cron().
 *
 * Fires hook_update_index() in all modules and cleans up dirty words (see
 * search_dirty).
 */
function socialmediafeed_cron() {
  // Retrieve our variables.
  $facebook_profile_id = variable_get('socialmediafeed_facebook_profile_id', FALSE);
  $facebook_app_id = variable_get('socialmediafeed_facebook_app_id', FALSE);
  $facebook_app_secret = variable_get('socialmediafeed_facebook_app_secret', FALSE);
  $twitter_profile_name = variable_get('socialmediafeed_twitter_profile_id', FALSE);
  $youtube_profile_name = variable_get('socialmediafeed_youtube_profile_name', FALSE);
  $foursquare_access_token = variable_get('socialmediafeed_foursquare_access_token', FALSE);

  if ($facebook_profile_id && $facebook_app_id && $facebook_app_secret) {
    socialmediafeed_facebook();
  }

  if ($twitter_profile_name) {
    socialmediafeed_twitter();
  }

  if ($youtube_profile_name) {
    socialmediafeed_youtube();
  }

  if ($foursquare_access_token) {
    socialmediafeed_foursquare();
  }
}

/**
 * Retrieves Data from Facebook.
 */
function socialmediafeed_facebook() {
  $profile_id = variable_get('socialmediafeed_facebook_profile_id', FALSE);
  // App Info, needed for Auth.
  $app_id = variable_get('socialmediafeed_facebook_app_id', FALSE);
  $app_secret = variable_get('socialmediafeed_facebook_app_secret', FALSE);
  // Retrieve auth token.
  $authtoken = drupal_http_request("https://graph.facebook.com/oauth/access_token?type=client_cred&client_id={$app_id}&client_secret={$app_secret}", array(), 'GET', NULL, 1);

  if ($authtoken->status_message == 'OK') {
    $data = drupal_http_request("https://graph.facebook.com/{$profile_id}/feed?{$authtoken->data}", array(), 'GET', NULL, 1);
    $data_con = $data->data;
    $result = json_decode(str_replace("\u2019", "'", $data_con));

    /**
     * Inserts Facebook Data.
     */
    function socialmediafeed_facebook_insert($table, $data) {
      $query = "SELECT * FROM {socialmediafeed_post} WHERE id = '%s'";
      $sql = db_query_range($query, $data->id, 0, 1);
      while ($item = db_fetch_object($sql)) {
        $myterms[] = $item;
      }

      if (!$myterms) {
        $post = array();
        $post['id'] = $data->id;
        $post['time'] = strtotime($data->created_time);
        $post['message'] = $data->message;
        $post['fbtype'] = $data->type;
        $post['picture'] = $data->picture;
        $post['link'] = $data->link;
        $post['name'] = $data->from->name;
        $post['description'] = $data->description;
        $post['post_type'] = 'facebook';
        drupal_write_record('socialmediafeed_post', $post);
      }
    }

    if ($result->data) {
      foreach ($result->data as $object) {
        $profileid = explode('_', $object->id);
        if ($object->from->id == $profileid[0]) {
          socialmediafeed_facebook_insert("socialmediafeed_post", $object);
        }
      }
    }
  }
}

/**
 * Retrieves Data from Twitter.
 */
function socialmediafeed_twitter() {
  $twitterprofile = variable_get('socialmediafeed_twitter_profile_id', FALSE);
  $twitter_url = "http://twitter.com/statuses/user_timeline/{$twitterprofile}.xml";
  $buffer = drupal_http_request($twitter_url, array(), 'GET', NULL, 1);
  if ($buffer->status_message == 'OK') {
    libxml_use_internal_errors(TRUE);
    try {
      $xml = new SimpleXMLElement($buffer->data);
    } catch (Exception $e) {
      // Retreat!
      return;
    }
    $status = $xml->status;

    /**
     * Inserts Twitter Data.
     */
    function socialmediafeed_twitter_insert($table, $data) {
      $query = "SELECT * FROM {socialmediafeed_post} WHERE id = '%s'";
      $sql = db_query_range($query, $data->id, 0, 1);
      while ($item = db_fetch_object($sql)) {
        $myterms[] = $item;
      }

      if (!$myterms) {
        $post = array();
        $post['time'] = strtotime($data->created_at);
        $post['message'] = $data->text;
        $post['post_type'] = 'twitter';
        $post['id'] = $data->id;
        $post['name'] = $data->user->screen_name;
        drupal_write_record('socialmediafeed_post', $post);
      }
    }

    if ($status) {
      foreach ($status as $object) {
        socialmediafeed_twitter_insert("socialmediafeed_post", $object);
      }
    }
  }
}

/**
 * Retrieves Data from Youtube.
 */
function socialmediafeed_youtube() {
  $youtubeprofile = variable_get('socialmediafeed_youtube_profile_name', FALSE);
  $feedurl = drupal_http_request("http://gdata.youtube.com/feeds/api/users/{$youtubeprofile}/uploads?format=5", array(), 'GET', NULL, 1);
  if ($feedurl->status_message == 'OK') {
    libxml_use_internal_errors(TRUE);
    try {
      $sxml = new SimpleXMLElement($feedurl->data);
    } catch (Exception $e) {
      // Retreat!
      return;
    }
    /**
     * Inserts Youtube Data.
     */
    function socialmediafeed_youtube_insert($table, $data) {
      // Retrieve this early for the check query.
      $arr = explode('/', $data->id);
      $id = $arr[count($arr) - 1];

      $query = "SELECT * FROM {socialmediafeed_post} WHERE id = '%s'";
      $sql = db_query_range($query, $id, 0 , 1);
      while ($item = db_fetch_object($sql)) {
        $myterms[] = $item;
      }

      if (!$myterms) {
        $media = $data->children('http://search.yahoo.com/mrss/');
        $attrs = $media->group->player->attributes();
        $watch = $attrs['url'];
        $attrs = $media->group->thumbnail[0]->attributes();
        $thumbnail = $attrs['url'];
        $post = array();
        $post['time'] = strtotime($data->published);
        $post['message'] = $media->group->description;
        $post['picture'] = $thumbnail;
        $post['link'] = $watch;
        $post['title'] = $media->group->title;
        $post['id'] = $id;
        $post['post_type'] = 'youtube';
        $post['name'] = $data->author->name;
        drupal_write_record('socialmediafeed_post', $post);
      }
    }

    if ($sxml->entry) {
      foreach ($sxml->entry as $object) {
        socialmediafeed_youtube_insert("socialmediafeed_post", $object);
      }
    }
  }
}

/**
 * Retrieves Data from Foursquare.
 */
function socialmediafeed_foursquare() {
  $foursquare_access_token = variable_get('socialmediafeed_foursquare_access_token', FALSE);
  $thedata = drupal_http_request('https://api.foursquare.com/v2/users/self/checkins?oauth_token=' . $foursquare_access_token . '', array(), 'GET', NULL, 1);
  $theuserdata = drupal_http_request('https://api.foursquare.com/v2/users/self?oauth_token=' . $foursquare_access_token . '', array(), 'GET', NULL, 1);
  if ($thedata->status_message == 'OK' && $theuserdata->status_message == 'OK') {
    $fq_object = json_decode(str_replace("\u2019", "'", $thedata->data));
    $fq_userobject = json_decode(str_replace("\u2019", "'", $theuserdata->data));

    /**
     * Inserts Foursquare Data.
     */
    function socialmediafeed_foursquare_insert($table, $data, $user) {
      $query = "SELECT * FROM {socialmediafeed_post} WHERE id = '%s'";
      $sql = db_query_range($query, $data->id, 0, 1);
      while ($item = db_fetch_object($sql)) {
        $myterms[] = $item;
      }

      if (!$myterms) {
        if ($data->type == 'venueless') {
          $post = array();
          $post['id'] = $data->id;
          $post['venue'] = $data->location->name;
          $post['time'] = $data->createdAt;
          $post['shout'] = $data->shout;
          $post['post_type'] = 'foursquare';
          $post['name'] = $user->id;
          $post['title'] = $user->firstName;
        }
        else {
          $post = array();
          $post['id'] = $data->id;
          $post['venue'] = $data->venue->name;
          $post['city'] = $data->venue->location->city;
          $post['state'] = $data->venue->location->state;
          $post['time'] = $data->createdAt;
          $post['shout'] = $data->shout;
          $post['post_type'] = 'foursquare';
          $post['name'] = $user->id;
          $post['title'] = $user->firstName;
        }
        drupal_write_record('socialmediafeed_post', $post);
      }
    }

    if ($fq_object->response->checkins->items) {
      foreach ($fq_object->response->checkins->items as $object) {
        socialmediafeed_foursquare_insert("socialmediafeed_post", $object, $fq_userobject->response->user);
      }
    }
  }
}

/**
 * Implements hook_block().
 */
function socialmediafeed_block($op = 'list', $delta = 0, $edit = array()) {
  // Adds CSS.
  drupal_add_css(drupal_get_path('module', 'socialmediafeed') . '/css/socialmediafeed.css');
  $feedtitle = variable_get('socialmediafeed_title', FALSE);
  switch ($op) {
    case 'list':
      $blocks[0]['info'] = t('Social Media Feed');
      return $blocks;

    case 'view':
      $blocks['subject'] = t($feedtitle);
      $blocks['content'] = socialmediafeed_build_the_feed();
      return $blocks;
  }
}

/**
 * Builds the block using data based on settings.
 */
function socialmediafeed_build_the_feed() {
  $displaycount = variable_get('socialmediafeed_displaycount', FALSE);
  $query = "SELECT * FROM {socialmediafeed_post} ORDER BY time DESC";
  $sql = db_query_range($query, 0, $displaycount);
  while ($item = db_fetch_object($sql)) {
    $feeditems[] = $item;
  }

  $feedname = variable_get('socialmediafeed_title', FALSE);
  $facebookprofile = variable_get('socialmediafeed_facebook_profile_id', FALSE);
  $facebooknamecustom = variable_get('socialmediafeed_facebook_title', FALSE);
  $twitternamecustom = variable_get('socialmediafeed_twitter_title', FALSE);
  $youtubenamecustom = variable_get('socialmediafeed_facebook_title', FALSE);
  $foursquarenamecustom = variable_get('socialmediafeed_foursquare_title', FALSE);

  return theme('socialmediafeed_feed_structure', 'socialmediafeed', $feeditems, $feedname, $facebookprofile, $facebooknamecustom, $twitternamecustom, $youtubenamecustom, $foursquarenamecustom);
}

/**
 * Implements hook_theme().
 */
function socialmediafeed_theme() {
  return array(
    'socialmediafeed_feed_structure' => array('arguments' => array('element' => NULL)),
  );
}

/**
 * Themes the block.
 */
function theme_socialmediafeed_feed_structure($element, $feeditems, $feedname, $facebookprofile, $facebooknamecustom, $twitternamecustom, $youtubenamecustom, $foursquarenamecustom) {

  $output = '<div id="socialmediafeed">';

  if ($feeditems) {
    foreach ($feeditems as $fitem) {
      switch ($fitem->post_type) {
      case 'facebook':
        $output .= '<div class="fbitem">';
        $output .= l('<div class="socialtitle bpfacebook"><span>' . ($facebooknamecustom ? check_plain($facebooknamecustom) : check_plain($fitem->name)) . '</span></div>', 'http://www.facebook.com/' . check_plain($facebookprofile) . '', array('attributes' => array('target' => '_blank'), 'html' => TRUE));
        $output .= '<p>';
        $output .= l(t(check_plain($fitem->name)), 'http://www.facebook.com/' . check_plain($facebookprofile) . '', array('attributes' => array('target' => '_blank'))) . ' ';
        $output .= check_plain($fitem->message);
        $output .= '</p>';
        if ($fitem->picture) {
          $output .= '<img class="asmediaimg" src="' . check_url($fitem->picture) . '">';
        }
        $output .= '<p class="socialdate">';
        $output .= format_date(check_plain($fitem->time), 'custom', 'l F d, Y' );
        $output .= '</p>';
        $output .= '</div>';
        break;

      case 'twitter':
        $output .= '<div class="fbitem">';
        $output .= l('<div class="socialtitle bptwitter"><span>@' . ($twitternamecustom ? check_plain($twitternamecustom) : check_plain($fitem->name)) . '</span></div>', 'http://www.twitter.com/' . check_plain($fitem->name) . '', array('attributes' => array('target' => '_blank'), 'html' => TRUE));
        $output .= '<p>';
        $output .= check_plain($fitem->message);
        $output .= '</p><p class="socialdate">';
        $output .= format_date(check_plain($fitem->time), 'custom', 'l F d, Y' );
        $output .= '</p>';
        $output .= '</div>';
        break;

      case 'foursquare':
        $output .= '<div class="fbitem">';
        $output .= l('<div class="socialtitle bpfoursaquare"><span>' . ($foursquarenamecustom ? check_plain($foursquarenamecustom) : check_plain($fitem->title)) . '</span></div>', 'http://www.foursquare.com/user/' . check_plain($fitem->name) . '', array('attributes' => array('target' => '_blank'), 'html' => TRUE));
        $output .= '<p>';
        $output .= '@';
        $output .= check_plain($fitem->venue);
        $output .= '<br />';
        $output .= check_plain($fitem->shout);
        $output .= '</p><p class="socialdate">';
        $output .= format_date(check_plain($fitem->time), 'custom', 'l F d, Y' );
        $output .= '</p>';
        $output .= '</div>';
        break;

      case 'youtube':
        $output .= '<div class="fbitem">';
        $output .= l('<div class="socialtitle bpyoutube"><span>'. ($youtubenamecustom ? check_plain($youtubenamecustom) : check_plain($fitem->name)) . '</span></div>', 'http://www.youtube.com/' . check_plain($fitem->name) . '', array('attributes' => array('target' => '_blank'), 'html' => TRUE));
        $output .= '<p>';
        $output .= check_plain($fitem->message);
        $output .= '</p><p class="socialdate">';
        $output .= format_date(check_plain($fitem->time), 'custom', 'l F d, Y' );
        $output .= '</p>';
        $output .= '</div>';
      break;
      }
    }
  }

  $output .= '</div><br />';
  return $output;
}
